        <Grid Grid.Row="0" Margin="0,0,0,-117" Height="100">
            <TextBlock x:Name="cappedChartAnnotation"
                                   Text="+" 
                                   Foreground="Gray" 
                                   FontSize="20" 
                                   HorizontalAlignment="Right"
                                   Margin="0,60,-11,0"
                                   />
            <telerikDV:RadBulletGraph x:Name="bulletGraph" 
                                                StartValue="-0.5" 
                                                EndValue="0.5" 
                                                TickStep="0.125" 
                                                LabelStep="0.25"
