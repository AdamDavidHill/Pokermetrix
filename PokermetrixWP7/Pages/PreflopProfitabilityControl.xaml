                                                Foreground="Gray"
                                                ComparativeMeasure="0"
                                                FeaturedMeasureThickness="20"
                                                FeaturedMeasure="-0.3"
                                                FeaturedMeasureBrush="{StaticResource PhoneAccentBrush}"
